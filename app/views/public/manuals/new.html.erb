<%= form_with model: @manual, local: true do |f| %>
<div class="form-group">
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
</div>
<div class="form-group">
  <%= f.label :description, '説明' %>
  <%= f.text_area :description %>
</div>
<div class="form-group">
  <%= f.label :image_id, 'サムネイル' %>
  <%= f.attachment_field :image %>
</div>
<div class="form-group">
  <%= f.label :category_id, 'カテゴリ' %>
  <%= f.collection_select :category_id, @categories, :id, :name, {prompt: "--選択してください--"} %>
</div>
<div class="form-group">
  <%= f.label :is_active, '公開設定' %>
  <%= f.select :is_active, [['非公開', false], ['公開', true]] %>
</div>
<div class="form-group">
  <%= f.submit '新規作成' %>
</div>
<% end %>