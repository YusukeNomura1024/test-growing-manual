<%= form_with model: @memo, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_area :code %>
  </div>
  <div class="form-group">
    <%= f.submit 'メモを登録' %>
  </div>
<% end %>

<% if @memo.errors.any? %>
  <% @memo.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>